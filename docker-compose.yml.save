version: '3.3'

services:
  adapter:
    image: 127.0.0.1:5001/hololens-adapter
    build: ./
    volumes:
    ports:
      - 1880:1880
    deploy:
      placement:
        constraints: [node.role == worker]
      resources:
        limits:
          cpus: "1"
          memory: 1G
      replicas: 1
      update_config:
        parallelism: 2
        delay: 10s
      restart_policy:
        condition: on-failure

